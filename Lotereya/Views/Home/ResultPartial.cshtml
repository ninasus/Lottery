@model Lotereya.Models.Winner

<div id="result">
    @if ((ViewData["result"] != null) && ((int)ViewData["result"] == 1))
    {
        <div>
            <span>Джекпот</span> выигран
        </div>
    }
    else
    {
        <div>
            <span>Джекпот</span> не выигран
        </div>
    }
    <button class="btn btn-default play-new">Новая игра</button>
</div>

@if ((ViewData["result"] != null) && ((int)ViewData["result"] == 1))
{
    <div class="modal fade modal_frm" id="modal_winner" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <a href="#" class="btn-close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></a>
                <div class="modal-heading">
                    Поздравляем Вы выиграли джекпот
                    <p>Заполните форму чтобы получить приз</p>
                </div>
                @using (Ajax.BeginForm("Winner", "Home",
                    new AjaxOptions { HttpMethod = "Post", OnBegin = "ContactFormBegin", OnFailure = "ContactFormFailure", OnSuccess = "ContactFormSuccess" },
                    new { enctype = "multipart/form-data", @class = "frm form-horizontal", role = "form", @id = "WinnerFrm" }))
                {
                    @Html.HiddenFor(model => model.id_draw)
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label>Ваше Ф.И.О.</label>
                            @Html.TextBoxFor(model => model.name, new { @class = "form-control input-name" })
                            @Html.ValidationMessageFor(model => model.name)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label>Ваш e-mail</label>
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control input-email" })
                            @Html.ValidationMessageFor(model => model.email)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label>Ващ телефон</label>
                            @Html.TextBoxFor(model => model.phone, new { @class = "form-control input-tel" })
                            @Html.ValidationMessageFor(model => model.phone)
                        </div>
                    </div>
                    <div class="form-group form-bot">
                        <div class="col-xs-12">
                            <button class="btn btn-default frm-submit" type="submit">Отправить</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

<script>
    $.validator.unobtrusive.parse(document);
</script>

}