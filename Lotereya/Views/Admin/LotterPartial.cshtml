@model int

@using (Ajax.BeginForm("Lotter", "Admin", new AjaxOptions { UpdateTargetId = "lotterDiv", InsertionMode = InsertionMode.Replace }))
{
    
    if (Lotereya.Models.LotTimer.IsStoped())
    {
    <div class="alert alert-danger">Лотерея не запущена</div>
    <input type="submit" value="Старт" class="btn btn-danger" />
    }
    else
    {
    <div class="alert alert-success">Лотерея запущена</div>
    <input type="submit" value="Стоп" class="btn btn-success" />
    }
}