@model Lotereya.Models.LoginModel

@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.Title = "Вход";
}
<div class="box-login">
    <h3>Вход на сайт</h3>
    <p>
        Пожалуйста, введите Ваш логин и пароль.
    </p>
    @using (Html.BeginForm("Login", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-login" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.AntiForgeryToken()
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <div class="form-group">
            <span class="input-icon">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Логин" })
                <i class="fa fa-user"></i>
            </span>
            @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
        </div>
        <div class="form-group form-actions">
            <span class="input-icon">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Пароль" })
                <i class="fa fa-lock"></i>
            </span>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-actions">
            <label for="remember" class="checkbox-inline">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "grey remember" })
                @Html.DisplayNameFor(m => m.RememberMe)
            </label>
            <button type="submit" class="btn btn-bricky pull-right">
                Войти <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>
        <div class="new-account">
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}