<!DOCTYPE html>
<!--[if IE 8]><html class="ie8 no-js" lang="en"><![endif]-->
<!--[if IE 9]><html class="ie9 no-js" lang="en"><![endif]-->
<html lang="en" class="no-js">
<head>
    <title>@ViewBag.Title | akonCMS</title>

    <meta charset="utf-8" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content="IE=edge,IE=9,IE=8,chrome=1" /><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta content="" name="description" />
    <meta content="" name="author" />

    <link rel="shortcut icon" href="~/Content/assets/images/favicon.ico" />    
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/assets/plugins/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/admin.css">
    <!--[if IE 7]>
    <link rel="stylesheet" href="~/Content/admin/assets/plugins/font-awesome/css/font-awesome-ie7.min.css">
    <![endif]-->



    @RenderSection("AddToHead", false)
</head>
<body class="account">
    <div class="main-login">
        <div class="logo">
            Akon<i class="fa fa-paperclip"></i>CMS
        </div>
        @RenderBody()
        <div class="copyright">
            <a href="/">Вернутся на сайт</a> @DateTime.Now.Year &copy; akonCMS
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryunobtrusiveajax")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- start: MAIN JAVASCRIPTS -->
    <!--[if lt IE 9]>
    <script src="~/Content/admin/assets/plugins/respond.min.js"></script>
    <script src="~/Content/admin/assets/plugins/excanvas.min.js"></script>
    <![endif]-->


    @RenderSection("scripts", required: false)

</body>
</html>
