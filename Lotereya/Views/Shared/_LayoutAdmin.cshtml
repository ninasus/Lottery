<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Администратор</title>

    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="~/Content/assets/plugins/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/admin.css">
</head>
<body>
    <header id="header">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Akon
                        <i class="fa fa-paperclip"></i>
                CMS
            </a>
        </div>
        <div class="navbar-tools">
            <ul class="nav">
                <li class="dropdown current-user">
                    <form id="logoutForm" method="post" action="/Account/LogOff" class="">
                        <a class="dropdown-toggle" href="#" data-close-others="true" data-hover="dropdown" data-toggle="dropdown">
                            <img class="circle-img" alt="" src="/Content/assets/images/icon_login.png">
                            <span class="username">akon</span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Admin/Manage">
                                    <i class="fa fa-android"></i>
                                    Мой профиль
                                </a>
                            </li>
                            <li>
                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                    <i class="fa fa-sign-out"></i>
                                    Выйти
                                </a>
                            </li>
                        </ul>
                    </form>
                </li>
            </ul>
        </div>
    </header>
    <div id="main">
        <aside>
            <ul class="main-navigation-menu">
                <li class="" data-cur-url="/admin/settings" data-url="/admin/settings">
                    <a href="/admin/settings">
                        <i class="fa fa-cog"></i>
                        <span class="title">Настройки</span>
                    </a>
                </li>
                <li class="" data-cur-url="/admin/winners" data-url="/admin/winners">
                    <a href="/admin/winners">
                        <i class="fa fa-trophy"></i>
                        <span class="title">Победители</span>
                    </a>
                </li>
            </ul>
        </aside>
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <footer id="footer">
        <div class="copy">
            2015 © akonCMS
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Content/assets/js/admin.js"></script>

    <script>
        $(document).ready(function ($) {
            Admin.init();
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
